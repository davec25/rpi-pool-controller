RM = rm -rf
CPPFLAGS = -DPUMP_DEBUG -I.
CC = g++ 
SRCS = pump_controller.cpp hayward_controller.cpp
OBJS = $(patsubst %.cpp,%.o,$(notdir ${SRCS}))

TARGET = pump2
LD_CMD = ld

.PHONY: all clean
all: $(TARGET)

clean:
	$(RM) $(TARGET) $(OBJS)

$(TARGET): $(OBJS)
	$(CC) -o $(TARGET) $(CFLAGS) $(OBJS) $(LIB_DIR) $(INC) $(LIBS)
